<form class="event-edit-form js-event-edit-form">
    <label for="event-title">Заголовок события</label>
    <input type="text" class="event-title-input js-event-title-input"
           id="event-title"
           name="title"
           placeholder="Заголовок"
           autocomplete="off">

    <label for="event-comment">Комментарий</label>
    <textarea class="event-title-input" id="event-comment" name="comment"></textarea>

    <button class="event-save-button js-event-save-button" type="submit" <% if(disabled) { %> disabled <%}%> >
        Сохранить
    </button>
    <button class="event-delete-button js-event-delete-button" type="button" <% if(disabled) { %> disabled <%}%> >
        Удалить
    </button>
</form>