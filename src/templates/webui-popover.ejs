<form class="event-edit-form js-event-edit-form">
    <label for="event-title">Заголовок события</label>
    <input type="text" class="event-title-input js-event-title-input"
           id="event-title"
           name="title"
           placeholder="Заголовок"
           autocomplete="off"
            <% if(disabled) { %>
           readonly
            <% } %>
    >

    <div class="event-data js-event-data">
        <% fields.forEach(field => { %>

        <div class="item-block">
            <label class="event-data-label"><%- field.title %></label>
            <% if(field.type === 'textarea') { %>
            <textarea class="event-data-value" name="<%- field.name %>"
                    <% if(disabled) { %>
                      readonly
                    <% } %>
            ></textarea>
            <% } else { %>
            <input type="text" class="event-data-value" name="<%- field.name %>"
                    <% if(disabled) { %>
                   readonly
                    <% } %>

                    <% if(field.placeholder) { %>
                   placeholder="<%- field.placeholder %>"
                    <% } %>
            />
            <% } %>
        </div>
        <% }) %>
    </div>

    <button class="event-save-button js-event-save-button" type="submit"
            <% if(disabled) { %>
            disabled
            <% } %>
    >
        Сохранить
    </button>

    <a href="#" class="event-cancel-link js-event-cancel-link"
            <% if(disabled) { %>
       disabled
            <% } %>
    >
        Отмена
    </a>

    <button class="event-delete-button js-event-delete-button" type="button"
            <% if(disabled) { %>
            disabled
            <% } %>
    >
        Удалить
    </button>
</form>